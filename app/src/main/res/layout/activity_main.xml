<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Button0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="0"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonEqual"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button2" />

    <Button
        android:id="@+id/Button7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="7"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/Button8"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonAC" />

    <Button
        android:id="@+id/Button8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="8"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/Button9"
        app:layout_constraintTop_toBottomOf="@+id/ButtonSinus" />

    <Button
        android:id="@+id/Button9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="9"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonDivision"
        app:layout_constraintTop_toBottomOf="@+id/ButtonCosinus" />

    <Button
        android:id="@+id/Button4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="4"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/Button5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button7" />

    <Button
        android:id="@+id/Button5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="5"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/Button6"
        app:layout_constraintTop_toBottomOf="@+id/Button8" />

    <Button
        android:id="@+id/Button6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="6"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonMultiply"
        app:layout_constraintTop_toBottomOf="@+id/Button9" />

    <Button
        android:id="@+id/Button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="1"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/Button2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button4" />

    <Button
        android:id="@+id/Button2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="2"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/Button3"
        app:layout_constraintTop_toBottomOf="@+id/Button5" />

    <Button
        android:id="@+id/Button3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#474747"
        android:text="3"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonSubstract"
        app:layout_constraintTop_toBottomOf="@+id/Button6" />

    <Button
        android:id="@+id/ButtonEqual"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:backgroundTint="#AC0B0B"
        android:text="="
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonAdd"
        app:layout_constraintTop_toBottomOf="@+id/Button3" />

    <Button
        android:id="@+id/ButtonAdd"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#020B37"
        android:text="+"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonSubstract" />

    <Button
        android:id="@+id/ButtonSubstract"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#020B37"
        android:text="-"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonMultiply" />

    <Button
        android:id="@+id/ButtonMultiply"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#020B37"
        android:text="*"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonDivision" />

    <Button
        android:id="@+id/ButtonDivision"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#020B37"
        android:text="/"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonTangent" />

    <Button
        android:id="@+id/ButtonTangent"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="66dp"
        android:backgroundTint="#020B37"
        android:text="TAN"
        android:textSize="16dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Results" />

    <Button
        android:id="@+id/ButtonAC"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#AC0B0B"
        android:text="AC"
        android:textSize="20dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonSinus"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Results" />

    <Button
        android:id="@+id/ButtonSinus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#020B37"
        android:text="SIN"
        android:textSize="16dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonCosinus"
        app:layout_constraintTop_toBottomOf="@+id/Results" />

    <Button
        android:id="@+id/ButtonCosinus"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#020B37"
        android:text="COS"
        android:textSize="16dp"
        app:cornerRadius="35dp"
        app:layout_constraintEnd_toStartOf="@+id/ButtonTangent"
        app:layout_constraintTop_toBottomOf="@+id/Results" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Calculadora de Marc Moran Monfort, 5M11"
        android:textColor="#B80808"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#020B37"
        android:textSize="54sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Commands" />

    <TextView
        android:id="@+id/Commands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="#020B37"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

</androidx.constraintlayout.widget.ConstraintLayout>

